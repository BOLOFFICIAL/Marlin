                                                            Content="Выберите программу"/>

                                                    <TextBox Grid.Column="1"
                                                             MinWidth="100"
                                                             Margin="0,0,10,0"
                                                             FontSize="15"
                                                             Padding="10,0"
                                                             IsReadOnly="True"
                                                             HorizontalContentAlignment="Center"
                                                             VerticalAlignment="Center"
                                                             Text=""/>
                                                </Grid>
                                            </Grid>
                                        </Grid>

                                    </StackPanel>

                                    <Button Grid.Row="1"
                                            FontSize="15"
                                            Width="auto"
                                            HorizontalAlignment="Center"
                                            Margin="0,0,10,0"
                                            Foreground="{Binding Path=ExternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}"
                                            Content="Добавить триггер"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Border>
            
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="Назад"
                        Margin="50,10,5,10"
                        FontSize="15"
                        FontWeight="Bold"
                        Command="{Binding Path=ToMainCommand}"
                        BorderThickness="0"
                        BorderBrush="Transparent"
                        Foreground="{Binding Path=ExternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}"
                        Background="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"/>

                <Button Grid.Column="1"
                        Content="{Binding Path=ButtonContent}"
                        FontSize="15"
                        FontWeight="Bold"
                        Margin="5,10,50,10" 
                        BorderThickness="0"
                        BorderBrush="Transparent"
                        Foreground="{Binding Path=ExternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}"
                        Background="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                        Command="{Binding Path=ButtonActionCommand}"/>
            </Grid>
         
        </Grid>
    </Grid>
</Page>
