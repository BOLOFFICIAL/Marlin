<Page x:Class="Marlin.Views.Main.CommandPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:Marlin.ViewModels.Main"
      xmlns:local="clr-namespace:Marlin.Views.Main"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="CommandPage"
      Foreground="{Binding Path=FontColor}">
    <Page.DataContext>
        <vm:CommandPageViewModel/>
    </Page.DataContext>
    <Grid Background="{Binding Path=ExternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}">
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="{Binding Path=BackgraundImagePath,UpdateSourceTrigger=PropertyChanged}"
                            Stretch="{Binding Path=Stretch,UpdateSourceTrigger=PropertyChanged}"
                            TileMode="{Binding Path=TileMode,UpdateSourceTrigger=PropertyChanged}"
                            ViewportUnits="{Binding Path=ViewportUnits,UpdateSourceTrigger=PropertyChanged}"
                            Viewport="{Binding Path=ImageViewport,UpdateSourceTrigger=PropertyChanged}"/>
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="50px"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Background="Transparent"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="30"
                       Margin="5"
                       FontWeight="Bold"
                       Padding="30,0"
                       Text="{Binding Path=Title}"/>

            <Border Grid.Row="1"
                    Margin="50,0,50,5"
                    CornerRadius="25"
                    Background="{Binding Path=InternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}"
                    BorderBrush="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                    BorderThickness="2">
                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"  
                                       Margin="0,0,10,0"
                                       FontSize="15"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                       Text="Название команды"/>

                            <TextBox Grid.Column="1"
                                     MinWidth="100"
                                     FontSize="15"
                                     Padding="10,0"
                                     HorizontalContentAlignment="Center"
                                     VerticalAlignment="Center"
                                     Text="{Binding Path=CommandTitle,UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>

                        <Grid Grid.Row="1"
                              Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox Grid.Column="0"
                                      Margin="0,0,10,0"
                                      IsChecked="False"/>

                            <TextBlock Grid.Column="1"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Foreground="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                       Text="Готовая команда для cmd"/>
                        </Grid>

                        <Grid Grid.Row="2"
                              Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox Grid.Column="0"
                                      Margin="0,0,10,0"
                                      IsChecked="True"/>

                            <TextBlock Grid.Column="1"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Foreground="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                       Text="Конструктор команд"/>
                        </Grid>

                        <Grid Grid.Row="3"
                              Margin="0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"  
                                       FontSize="15"
                                       Margin="0,0,10,0"
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"
                                       Foreground="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                       Text="Введите готовую команду для cmd"/>

                            <TextBox Grid.Column="1"
                                     MinWidth="100"
                                     Padding="10,0"
                                     FontSize="15"
                                     HorizontalContentAlignment="Center"
                                     Text=""/>
                        </Grid>

                        <Grid Grid.Row="4"
                              Margin="0,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0"
                                  Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"  
                                           FontSize="15"
                                           Margin="0,0,10,0"
                                           FontWeight="Bold"
                                           Foreground="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                           Text="Выберите тип объекта"/>
                                <ComboBox Grid.Column="1"/>
                            </Grid>
                            <Grid Grid.Row="1"
                                  Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="0"  
                                        FontSize="15"
                                        Margin="0,0,10,0"
                                        Foreground="{Binding Path=FontColor,UpdateSourceTrigger=PropertyChanged}"
                                        Content="Выбрать объект"/>
                                <TextBox Grid.Column="1"
                                         MinWidth="100"
                                         FontSize="15"
                                         IsReadOnly="True"
                                         HorizontalContentAlignment="Center"
                                         VerticalAlignment="Center"
                                         Text=""/>
                            </Grid>
                            <Grid Grid.Row="2"
                                  Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0"  
                                        FontSize="15"
                                        Margin="0,0,10,0"
                                        Foreground="{Binding Path=FontColor,UpdateSourceTrigger=PropertyChanged}"
                                        Content="Выбрать программу для запуска объекта"/>

                                <TextBox Grid.Column="1"
                                         MinWidth="100"
                                         FontSize="15"
                                         IsReadOnly="True"
                                         HorizontalContentAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         Text=""/>
                            </Grid>
                            <Grid Grid.Row="3"
                                  Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"  
                                           FontSize="15"
                                           Margin="0,0,10,0"
                                           FontWeight="Bold"
                                           Foreground="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                           Text="Запрашивать пароль перед запуском"/>
                                <CheckBox Grid.Column="1"
                                          IsChecked="False"/>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="5"
                              Margin="0,5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0"  
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Margin="0,0,10,0"
                                       Foreground="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                       Text="Триггеры"/>

                            <Grid Grid.Row="1"
                                  Margin="0,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0"
                                            Margin="0,10">
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>

                                        <ComboBox Grid.Column="0"
                                                  Margin="0,0,10,0"
                                                  MinWidth="50"/>

                                        <TextBox Grid.Column="1"
                                                 MinWidth="100"
                                                 FontSize="15"
                                                 Padding="10,0"
                                                 HorizontalContentAlignment="Center"
                                                 Text="Фраза 1"/>
                                    </Grid>
                                    
                                </StackPanel>

                                <Button Grid.Row="1"
                                        FontSize="15"
                                        Width="100"
                                        HorizontalAlignment="Left"
                                        Margin="0,0,10,0"
                                        Foreground="{Binding Path=FontColor,UpdateSourceTrigger=PropertyChanged}"
                                        Content="Добавить триггер"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Border>
            
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="Назад"
                        Margin="50,10,5,10"
                        FontSize="15"
                        FontWeight="Bold"
                        Command="{Binding Path=ToMainCommand}"
                        BorderThickness="0"
                        BorderBrush="Transparent"
                        Foreground="{Binding Path=ExternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}"
                        Background="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"/>

                <Button Grid.Column="1"
                        Content="{Binding Path=ButtonContent}"
                        FontSize="15"
                        FontWeight="Bold"
                        Margin="5,10,50,10" 
                        BorderThickness="0"
                        BorderBrush="Transparent"
                        Foreground="{Binding Path=ExternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}"
                        Background="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                        Command="{Binding Path=ButtonActionCommand}"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
