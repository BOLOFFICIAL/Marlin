<Page x:Class="Marlin.Views.Main.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:vm="clr-namespace:Marlin.ViewModels.Main"
      xmlns:local="clr-namespace:Marlin.Views.Main"
      mc:Ignorable="d" 
      d:Height="1450" 
      d:Width="800"
      ShowsNavigationUI="False"
      Foreground="{Binding Path=FontColor}"
      Title="SettingsPage">
    <Page.DataContext>
        <vm:SettingsPageViewModel/>
    </Page.DataContext>
    <Grid Background="{Binding Path=ExternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}">
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="{Binding Path=BackgraundImagePath,UpdateSourceTrigger=PropertyChanged}"
                            Stretch="{Binding Path=Stretch,UpdateSourceTrigger=PropertyChanged}"
                            TileMode="{Binding Path=TileMode,UpdateSourceTrigger=PropertyChanged}"
                            ViewportUnits="{Binding Path=ViewportUnits,UpdateSourceTrigger=PropertyChanged}"
                            Viewport="{Binding Path=ImageViewport,UpdateSourceTrigger=PropertyChanged}"/>
            </Grid.Background>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="50px"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50px"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBlock Background="Transparent"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="30"
                           FontWeight="Bold"
                           Padding="30,0"
                           Text="Настройки"/>
            </Grid>

            <Grid Grid.Row="1">
                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0"
                                Margin="50,0,50,5"
                                CornerRadius="25"
                                Background="{Binding Path=InternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}"
                                BorderBrush="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                BorderThickness="2">
                            <Grid Margin="15,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Margin="10,0"
                                       FontSize="25"
                                       FontWeight="Bold"
                                       Foreground="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                       Text="Программа"/>

                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0"
                                      Margin="0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                   Margin="10,10"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                                   Text="Оформление:"/>

                                            <Grid Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="{Binding Path=LengthImage}"/>
                                                    <RowDefinition Height="{Binding Path=LengthScale}"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0"
                                                  Margin="0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Button Grid.Column="0"
                                                            FontSize="15"
                                                            Padding="10,0"
                                                            Command="{Binding Path=SelectColorCommand}"
                                                            CommandParameter="ExternalBackgroundColor"
                                                            BorderThickness="0"
                                                            BorderBrush="Transparent"
                                                            Foreground="{Binding Path=ExternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}"
                                                            Background="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                                            Margin="0,0,15,0"
                                                            VerticalAlignment="Center"
                                                            Content="Цвет внешнего фона"/>

                                                    <TextBox Grid.Column="1"
                                                                 MaxLength="7"
                                                             Padding="10,0"
                                                             VerticalContentAlignment="Center"
                                                                 FontSize="15"
                                                                 Text="{Binding Path=ExternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}"
                                                                 HorizontalContentAlignment="Center"/>
                                                </Grid>

                                                <Grid Grid.Row="1"
                                                      Margin="0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Button Grid.Column="0"
                                                            FontSize="15"
                                                            Margin="0,0,15,0"
                                                            Padding="10,0"
                                                            HorizontalContentAlignment="Center"
                                                           VerticalAlignment="Center"
                                                            Command="{Binding Path=SelectColorCommand}"
                                                            CommandParameter="InternalBackgroundColor"
                                                            BorderThickness="0"
                                                            BorderBrush="Transparent"
                                                            Foreground="{Binding Path=ExternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}"
                                                            Background="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                                           Content="Цвет внутреннего фона"/>

                                                    <TextBox Grid.Column="1"
                                                                 MaxLength="7"
                                                             Padding="10,0"
                                                             VerticalContentAlignment="Center"
                                                                 FontSize="15"
                                                                 Text="{Binding Path=InternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}"
                                                                 HorizontalContentAlignment="Center"/>
                                                    
                                                </Grid>

                                                <Grid Grid.Row="2"
                                                      Margin="0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Button Grid.Column="0"
                                                           FontSize="15"
                                                           Margin="0,0,15,0"
                                                            Padding="10,0"
                                                           VerticalAlignment="Center"
                                                            Command="{Binding Path=SelectColorCommand}"
                                                            CommandParameter="FontColor"
                                                            BorderThickness="0"
                                                            BorderBrush="Transparent"
                                                            Foreground="{Binding Path=ExternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}"
                                                            Background="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                                           Content="Цвет текста"/>

                                                    <TextBox Grid.Column="1"
                                                                 MaxLength="7"
                                                             Padding="10,0"
                                                             VerticalContentAlignment="Center"
                                                                 FontSize="15"
                                                                 Text="{Binding Path=FontColor,UpdateSourceTrigger=PropertyChanged}"
                                                                 HorizontalContentAlignment="Center"/>
                                                </Grid>

                                                <Grid Grid.Row="3"
                                                      Margin="0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Button Grid.Column="0"
                                                            FontSize="15"
                                                            Margin="0,0,15,0"
                                                            Padding="10,0"
                                                            VerticalAlignment="Center"
                                                            Command="{Binding Path=SelectColorCommand}"
                                                            CommandParameter="PageColor"
                                                            BorderThickness="0"
                                                            BorderBrush="Transparent"
                                                            Foreground="{Binding Path=ExternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}"
                                                            Background="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                                            Content="Цвет объектов"/>

                                                    <TextBox Grid.Column="1"
                                                             MaxLength="7"
                                                             Padding="10,0"
                                                             VerticalContentAlignment="Center"
                                                             FontSize="15"
                                                             Text="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                                             HorizontalContentAlignment="Center"/>
                                                </Grid>

                                                <Grid Grid.Row="4"
                                                      Margin="0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="{Binding Path=LengthImage}"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Button Grid.Column="0"
                                                            FontSize="15"
                                                            Margin="0,0,15,0"
                                                            Padding="10,0"
                                                            BorderThickness="0"
                                                            BorderBrush="Transparent"
                                                            Foreground="{Binding Path=ExternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}"
                                                            Background="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                                            VerticalAlignment="Center"
                                                            Command="{Binding Path=ChoseCommand}"
                                                            CommandParameter="Фоновое изображение"
                                                            Content="Фоновое изображение"/>

                                                    <Grid Grid.Column="1">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto"/>
                                                            <ColumnDefinition Width="auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBox Grid.Column="0" 
                                                                 FontSize="15"
                                                                 Margin="0,0,5,0"
                                                                 Padding="10,0"
                                                                 IsReadOnly="True"
                                                                 Text="{Binding Path=BackgraundImage,UpdateSourceTrigger=PropertyChanged}"
                                                                 VerticalContentAlignment="Center"
                                                                 ToolTip="{Binding Path=BackgraundImagePath}"
                                                                 HorizontalContentAlignment="Center"/>

                                                        <Button Grid.Column="1"
                                                                BorderThickness="0"
                                                                FontSize="15"
                                                                Padding="0"
                                                                FontWeight="Bold"
                                                                BorderBrush="Transparent"
                                                                Foreground="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                                                Background="Transparent"
                                                                Command="{Binding Path=DeleteImageCommand}"
                                                                Content="✖"/>
                                                    </Grid>
                                                </Grid>

                                                <Grid Grid.Row="5" 
                                                      Margin="0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0"
                                                           FontSize="15"
                                                           Margin="0,0,15,0"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Text="Бесшовное заполнение:"/>

                                                    <CheckBox Grid.Column="1"
                                                          FontSize="15"
                                                          IsChecked="{Binding Path=Seamless,UpdateSourceTrigger=PropertyChanged}"
                                                          HorizontalContentAlignment="Center"/>
                                                </Grid>

                                                <Grid Grid.Row="6"
                                                      Margin="0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0"
                                                           FontSize="15"
                                                           Margin="0,0,15,0"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Text="Масштаб изображения:"/>

                                                    <Slider Grid.Column="1" 
                                                            Width="100" 
                                                            Minimum="100" 
                                                            VerticalAlignment="Center"
                                                            Maximum="3000"
                                                            Value="{Binding Path=ImageScail}"/>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </Grid>

                                    <Grid Grid.Row="1"
                                      Margin="0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                   Margin="10"
                                                   FontSize="20"
                                                       VerticalAlignment="Center"
                                                   Foreground="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                                   FontWeight="Bold"
                                                   Text="Озвучивание:"/>

                                            <Grid Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="{Binding Path=LengthSay}"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="1"
                                                      Margin="0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0"
                                                           FontSize="15"
                                                           Margin="0,0,15,0"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Text="Скорось озвучивания"/>

                                                    <ComboBox Grid.Column="1"
                                                          FontSize="15"
                                                          SelectedValue="{Binding Path=Speed,UpdateSourceTrigger=PropertyChanged}"
                                                          ItemsSource="{Binding Path=Speeds,UpdateSourceTrigger=PropertyChanged}"
                                                          HorizontalContentAlignment="Center"/>
                                                </Grid>

                                                <Grid Grid.Row="0"
                                                  Margin="0,10">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0"
                                                           FontSize="15"
                                                           Margin="0,2,15,0"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Text="Озвучивать:"/>

                                                    <CheckBox Grid.Column="1"
                                                          FontSize="15"
                                                          IsChecked="{Binding Path=IsSay,UpdateSourceTrigger=PropertyChanged}"
                                                          HorizontalContentAlignment="Center"/>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>

                        <Border Grid.Row="1"
                                Background="{Binding Path=InternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}"
                                Margin="50,5,50,0"
                                CornerRadius="20"
                                BorderBrush="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                BorderThickness="2">
                            <Grid Margin="15,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0"
                                       FontSize="25"
                                           Margin="10,0"
                                       FontWeight="Bold"
                                       Foreground="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                       Text="Администрирование"/>

                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0"
                                          Margin="0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                   Margin="10,5"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                                   Text="Администратор:"/>

                                            <Grid Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0"
                                                  Margin="0,5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0"
                                                               FontSize="15"
                                                               Margin="0,0,15,0"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"
                                                               Text="Имя / Логин:"/>

                                                    <TextBox Grid.Column="1"
                                                             FontSize="15"
                                                             Padding="10,5"
                                                             MinWidth="100"
                                                             Text="{Binding Path=NewLogin,UpdateSourceTrigger=PropertyChanged}"
                                                             HorizontalContentAlignment="Center"/>
                                                </Grid>

                                                <Grid Grid.Row="1"
                                                  Margin="0,5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0"
                                                           FontSize="15"
                                                           Margin="0,0,15,0"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Text="Новый пароль:"/>

                                                    <TextBox Grid.Column="1"
                                                         FontSize="15"
                                                             Padding="10,5"
                                                         MinWidth="100"
                                                         Text="{Binding Path=NewPassword,UpdateSourceTrigger=PropertyChanged}"
                                                         HorizontalContentAlignment="Center"/>
                                                </Grid>

                                                <Grid Grid.Row="2"
                                                  Margin="0,5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0"
                                                               FontSize="15"
                                                               Margin="0,0,15,0"
                                                               VerticalAlignment="Center"
                                                               HorizontalAlignment="Center"
                                                               Text="Пол:"/>

                                                    <ComboBox Grid.Column="1"
                                                          FontSize="15"
                                                          SelectedValue="{Binding Path=NewGender,UpdateSourceTrigger=PropertyChanged}"
                                                          ItemsSource="{Binding Path=Genders,UpdateSourceTrigger=PropertyChanged}"
                                                          HorizontalContentAlignment="Center"/>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </Grid>

                                    <Grid Grid.Row="1"
                                          Margin="0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                   Margin="10"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   Foreground="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                                   Text="Данные:"/>

                                            <Grid Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Button Grid.Column="0"
                                                            FontSize="15"
                                                            Margin="0,0,15,0"
                                                            Padding="10,0"
                                                            BorderThickness="0"
                                                            BorderBrush="Transparent"
                                                            Foreground="{Binding Path=ExternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}"
                                                            Background="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                                            VerticalAlignment="Center"
                                                            HorizontalAlignment="Center"
                                                            Command="{Binding Path=ChoseCommand}"
                                                            CommandParameter="Папка для данных"
                                                            Content="Папка для данных"/>

                                                    <TextBox Grid.Column="1"
                                                             FontSize="15"
                                                             Padding="10,5"
                                                             IsReadOnly="True"
                                                             Text="{Binding Path=NewMainFolder,UpdateSourceTrigger=PropertyChanged}"
                                                             ToolTip="{Binding Path=NewMainFolderPath}"
                                                             VerticalAlignment="Center"
                                                             HorizontalContentAlignment="Center"/>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </Grid>

                                    <Grid Grid.Row="2"
                                          Margin="0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                   Margin="10"
                                                   FontSize="20"
                                                       VerticalAlignment="Center"
                                                   FontWeight="Bold"
                                                   Foreground="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                                                   Text="Система:"/>

                                            <Grid Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0"
                                                  Margin="0,0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="auto"/>
                                                        <ColumnDefinition Width="auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0"
                                                           FontSize="15"
                                                           Margin="0,2,15,0"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Text="Автозапуск:"/>

                                                    <CheckBox Grid.Column="1"
                                                          FontSize="15"
                                                          IsChecked="{Binding Path=Аutorun,UpdateSourceTrigger=PropertyChanged}"
                                                          HorizontalContentAlignment="Center"/>
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150px"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="Назад"
                        Margin="10,10,5,10"
                        FontSize="15"
                        FontWeight="Bold"
                        Command="{Binding Path=ToMainCommand}"
                        BorderThickness="0"
                        BorderBrush="Transparent"
                        Foreground="{Binding Path=ExternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}"
                        Background="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"/>

                <Button Grid.Column="1"
                        Content="Сохранить"
                        FontSize="15"
                        FontWeight="Bold"
                        Margin="5,10,10,10" 
                        BorderThickness="0"
                        BorderBrush="Transparent"
                        Foreground="{Binding Path=ExternalBackgroundColor,UpdateSourceTrigger=PropertyChanged}"
                        Background="{Binding Path=PageColor,UpdateSourceTrigger=PropertyChanged}"
                        Command="{Binding Path=SaveSettingsCommand}"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
